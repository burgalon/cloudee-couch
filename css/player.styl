timeBarWidth = 980px
timeTextWidth = 126px
paddingHelper = ((screenWidth - timeBarWidth - timeTextWidth * 2) / 2)
.player
  .controls
    visibility: hidden
    font-size: 24px
    position: absolute
    bottom: 0
    color: #f5f5f5
    padding: paddingHelper
    width: screenWidth - @padding * 2
    background: transparentBlack


    .time
      float: left
      width: timeTextWidth

    .duration-bar
      float: left
      background: #959595
      height: 24px
      border-radius: 12px
      width: timeBarWidth

    .time-bar
      float: left
      background: selectedBlue
      height: 24px
      border-radius: 12px
      width: (paddingHelper / 2)
      position: absolute
      top: paddingHelper
      left: timeTextWidth + (paddingHelper / 2)

    .scrubber
      float: left
      position: absolute
      left: timeTextWidth + (paddingHelper / 2)
      width: 34px
      height: 34px
      border-radius: 25px
      background: selectedBlue
      border: 6px solid #fff
      top: 14px

    .duration
      float: left
      width: timeTextWidth
      text-align: right

  .up-next
    .feed
      border-top: none
      position: absolute
      bottom: 77px
      left: 0
      background-color: transparentBlack
      padding: 30px 36px 0 paddingHelper

.player-wrapper
  .player
    .controls
      visibility: visible