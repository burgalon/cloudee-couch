timeBarWidth = 980px
timeTextWidth = 126px
paddingHelper = ((screenWidth - timeBarWidth - timeTextWidth * 2) / 2)
.player
  .controls
    font-size: 24px
    position: absolute
    bottom: 0
    color: #f5f5f5
    padding: paddingHelper
    width: screenWidth - @padding * 2
    background: rgba(0, 0, 0, 0.7)

    div
      float: left

    .time
      width: timeTextWidth

    .duration-bar
      background: #959595
      height: 24px
      border-radius: 12px
      width: timeBarWidth

    .time-bar
      background: selectedBlue
      height: 24px
      border-radius: 12px
      width: timeBarWidth
      position: absolute
      top: paddingHelper
      left: timeTextWidth + paddingHelper

    .scrubber
      position: absolute
      left: 109px
      width: 34px
      height: 34px
      border-radius: 25px
      background: selectedBlue
      border: 6px solid #fff
      top: 14px

    .duration
      width: timeTextWidth
      text-align: right