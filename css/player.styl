timeBarWidth = 900px
timeTextWidth = ((1280px - timeBarWidth) / 2)
controlsTopPadding = 44px

.player
  .pause
    width: 100px
    height: @width
    position: absolute
    top: (screenHeight / 2) - (@height / 2)
    left: (screenWidth / 2) - (@width / 2)
    background: url(images/pause.png)
    display: none


  &.paused
    .paused-curtain
      position: absolute
      width: 100%
      height: screenHeight
      top: 0
      background: rgba(0, 0, 0, 0.4)

    .pause
      display: block

  .controls
    visibility: hidden
    font-size: 24px
    position: absolute
    bottom: 0
    color: #f5f5f5
    padding: controlsTopPadding 0
    width: screenWidth
    background: transparentBlack


    .time
      float: left
      width: timeTextWidth
      text-align: center

    .duration-bar
      float: left
      background: #959595
      height: 24px
      border-radius: 12px
      width: timeBarWidth

    .time-bar, .buffer-bar
      float: left
      background: selectedBlue
      height: 24px
      border-radius: 12px
      width: 0
      position: absolute
      top: controlsTopPadding
      left: timeTextWidth

    .buffer-bar
      background: #B3B8BB

    .scrubber
      float: left
      position: absolute
      left: timeTextWidth - (34 / 2)
      width: 34px
      height: 34px
      border-radius: 25px
      background: selectedBlue
      border: 6px solid #fff
      top: controlsTopPadding - (20 / 2)

    .duration
      float: left
      width: timeTextWidth
      text-align: center

  .up-next
    .feed
      border-top: none
      position: absolute
      bottom: controlsTopPadding * 2 + 29px
      background-color: transparentBlack
      padding: 36px 36px 0 62px

.player-wrapper
  .player
    .controls
      visibility: visible